{
    "compilerOptions": {
        "target": "ES2015",
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "include": [
        "./*.js",
        "./*.ts",
        "frontend/src/**.ts",
        "frontend/src/**.vue"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
